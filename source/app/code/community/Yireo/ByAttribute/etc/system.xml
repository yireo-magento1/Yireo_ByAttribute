<config>
    <sections>
        <catalog>
            <groups>
                <byattribute translate="label">
                    <label>ByAttribute</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>890</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <sidebar_skip_empty translate="label">
                            <label>Sidebar - Skip empty</label>
                            <comment><![CDATA[Skip attribute-values that have no products]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sidebar_skip_empty>
                        <sidebar_show_product_count translate="label">
                            <label>Sidebar - Show product-count</label>
                            <comment><![CDATA[Show per attribute-value the number of products]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sidebar_show_product_count>
                        <overview_title_format translate="label">
                            <label>Overview - Title format</label>
                            <comment><![CDATA[Title format to appear on the product-overview<br/>Variables: $ATTRIBUTE, $VALUE]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </overview_title_format>
                        <use_label_in_url translate="label">
                            <label>Use label as URL-value</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </use_label_in_url>
                    </fields>
                </byattribute>
            </groups>
        </catalog>
    </sections>
</config>
